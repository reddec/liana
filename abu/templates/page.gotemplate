<html lang="en">
<head>
    {{$end := "{{end}}"}}
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    {{"with .Data" | gtpl}}
    <title>{{.Params.Title}}</title>
    {{- $end}}
    <link rel="stylesheet" href="{{.Params.BootstrapURL}}"/>
</head>
<body>
<!-- top -->
{{- if $.Params.Menu}}
    <nav class="navbar navbar-expand-lg bg-dark">
        <div class="navbar-expand" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                {{- range $title, $ref := $.Params.Menu}}
                    <li class="nav-item">
                        <a class="nav-link {{if eq $.Params.Active $title}}active{{end}}" style="color: #f8f9fa"
                           href="{{$ref}}">{{$title}}</a>
                    </li>
                {{- end}}
            </ul>
        </div>
    </nav>
{{- end}}
<div class="container">
    {{- if .Params.Title}}
        <br/>
        {{"with .Data" | gtpl}}
        <h1 class="text-center">{{.Params.Title}}</h1>
        {{- $end}}
    {{- end}}
    {{- if .Params.Description}}
        <br/>
        <p>{{.Params.Description}}</p>
    {{- end}}
    <br/>
    {{"with .Data" | gtpl}}
    <table class="table table-striped">
        {{- range $index, $field := .Titles}}
            <tr class="d-flex">
                <th class="col-md-4 col-lg-2">{{$field}}</th>
                <td>
                    {{- if ($index | isByteArray)}}
                        {{(print "with ." (index  $.Fields $index)) | gtpl}}<a href="data:text/plain;base64,{{"{{. | b64}}"}}"
                                                             download="{{$field}}">download</a>{{$end}}
                    {{else}}
                        {{"{{"}}.{{index $.Fields $index}}{{"}}"}}
                    {{end}}
                </td>
            </tr>
        {{- end}}
    </table>
    {{- $end}}
</div>
<style>
    td {
        word-break: break-all;
    }
</style>
</body>
</html>