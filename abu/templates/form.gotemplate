<html lang="en">
<head>
    {{$end := "{{end}}"}}
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    {{"with .Data" | gtpl}}
    <title>{{.Params.Title}}</title>
    {{- $end}}
    <link rel="stylesheet" href="{{.Params.BootstrapURL}}"/>
</head>
<body>
<!-- top -->
{{- if $.Params.Menu}}
    <nav class="navbar navbar-expand-lg bg-dark">
        <div class="navbar-expand" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                {{- range $title, $ref := $.Params.Menu}}
                    <li class="nav-item {{if eq $.Params.Active $title}}active{{end}}">
                        <a class="nav-link" style="color: #f8f9fa" href="{{$ref}}">{{$title}}</a>
                    </li>
                {{- end}}
            </ul>
        </div>
    </nav>
{{- end}}
<div class="container">
    {{- if .Params.Title}}
        <br/>
        {{"with .Data" | gtpl}}
        <h1 class="text-center">{{.Params.Title}}</h1>
        {{- $end}}
    {{- end}}
    <br/>
    {{"if .Error" | gtpl}}
    <div class="alert alert-danger" role="alert">
        <pre>{{".Error.Error" | gtpl}}</pre>
    </div>
    {{$end}}
    {{"if .Success" | gtpl}}
    <div class="alert alert-success" role="alert">
        {{".Success" | gtpl }}
    </div>
    {{$end}}
    <form method="POST" enctype="multipart/form-data">
        {{"with .Data" | gtpl}}
        <table class="table table-striped">
            {{- range $index, $field := .Titles}}
                {{- $fName := index $.Fields $index -}}
                <tr class="d-flex">
                    <td class="col-md-4 col-lg-2">{{$field}}</td>
                    <td class="col-md-8 col-lg-10">
                        {{- $type := index $.Types $index -}}
                        {{- if and (not $type.BuiltIn) (isType $type "time" "Time")}}
                            <input type="datetime-local" class="form-control" name="{{$fName}}"
                                   value='{{"{{"}}.{{$fName}}.Format "2006-01-02T15:04"{{"}}"}}'/>
                        {{- else if and $type.BuiltIn (eq $type.Name "bool")}}
                            <label class="container-checkbox">
                                <input type="checkbox" name="{{$fName}}"
                                       {{"{{ if "}}.{{$fName}}{{"}}"}}checked{{$end}}/>
                                <span class="checkmark"></span>
                            </label>
                        {{- else if ($index | isByteArray)}}
                            <input type="file" name="{{$fName}}" class="form-control"/>
                        {{- else}}
                            <input type="text" class="form-control" name="{{$fName}}"
                                   value="{{"{{"}}.{{$fName}}{{"}}"}}"/>
                        {{- end}}
                    </td>
                </tr>

            {{- end}}
        </table>
        <button class="btn btn-success" type="submit">submit</button>
    </form>
    {{- $end}}
</div>
<style>
    /* Customize the label (the container) */
    .container-checkbox {
        display: block;
        position: relative;
        padding-left: 35px;
        margin-bottom: 12px;
        cursor: pointer;
        font-size: 22px;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }

    /* Hide the browser's default checkbox */
    .container-checkbox input {
        position: absolute;
        opacity: 0;
        cursor: pointer;
        height: 0;
        width: 0;
    }

    /* Create a custom checkbox */
    .checkmark {
        position: absolute;
        top: 0;
        left: 0;
        height: 25px;
        width: 25px;
        background-color: #eee;
    }

    /* On mouse-over, add a grey background color */
    .container-checkbox:hover input ~ .checkmark {
        background-color: #ccc;
    }

    /* When the checkbox is checked, add a blue background */
    .container-checkbox input:checked ~ .checkmark {
        background-color: #2196F3;
    }

    /* Create the checkmark/indicator (hidden when not checked) */
    .checkmark:after {
        content: "";
        position: absolute;
        display: none;
    }

    /* Show the checkmark when checked */
    .container-checkbox input:checked ~ .checkmark:after {
        display: block;
    }

    /* Style the checkmark/indicator */
    .container-checkbox .checkmark:after {
        left: 9px;
        top: 5px;
        width: 5px;
        height: 10px;
        border: solid white;
        border-width: 0 3px 3px 0;
        -webkit-transform: rotate(45deg);
        -ms-transform: rotate(45deg);
        transform: rotate(45deg);
    }
</style>
</body>
</html>